<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/recipeDetailesScrollView"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mealRecipesBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:tint="@color/black" />

    <TextView
        android:id="@+id/mealRecipeHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/ellina"
        android:text="@string/meal_recipe_my_meal_header"
        android:textSize="23sp"
        android:textStyle="bold|italic" />

    <com.example.scooksproject.NonScrollListView
        android:id="@+id/mealRecipeGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mealRecipeHeader"
        android:layout_marginTop="20dp"
        android:numColumns="1"
        android:divider="@null"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mealRecipeStartBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mealRecipeGridView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/teal_200"
            android:fontFamily="@font/ellina"
            android:text="@string/meal_recipe_start_meal"
            app:cornerRadius="81dp" />

</RelativeLayout>
    </androidx.core.widget.NestedScrollView >