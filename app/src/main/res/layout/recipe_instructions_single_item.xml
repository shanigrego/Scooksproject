<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <EditText
        android:id="@+id/txtDetails"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_corners_light_purple"
        android:fontFamily="@font/ellina"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:maxLines="7"
        android:padding="5dp"
        android:scrollbars="vertical"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/stepNum"
        app:layout_constraintEnd_toStartOf="@+id/stepNum"
        app:layout_constraintLeft_toRightOf="@+id/removeRecipeStep"
        app:layout_constraintTop_toTopOf="@+id/removeRecipeStep"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/removeRecipeStep"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/delete2"
        app:layout_constraintBottom_toBottomOf="@+id/stepNum"
        app:layout_constraintEnd_toStartOf="@+id/txtDetails"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/stepNum" />

    <TextView
        android:id="@+id/stepNum"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/instruction_circle"
        android:fontFamily="@font/ellina"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.923"
        app:layout_constraintLeft_toRightOf="@+id/txtDetails"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.503"
        tools:ignore="RtlSymmetry" />

</androidx.constraintlayout.widget.ConstraintLayout>