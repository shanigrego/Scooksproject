<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/singleFinalRecipeInstructionTV"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:fontFamily="@font/ellina"
        android:scrollbars = "vertical"
        android:gravity="center"
        android:text="asd"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:padding="30px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/finalTimerIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/finalTimerIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:backgroundTint="@color/clock_color2"
        android:foregroundGravity="center"
        android:src="@drawable/ic_baseline_timer_24"
        app:borderWidth="0.5dp"
        app:fabCustomSize="37dp"
        app:layout_constraintBottom_toBottomOf="@+id/singleFinalRecipeInstructionTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/singleFinalRecipeInstructionTV" />

