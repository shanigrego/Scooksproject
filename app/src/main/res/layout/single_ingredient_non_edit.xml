<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <TextView
        android:id="@+id/ingredientsNonEditAmount"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:background="@drawable/rounded_corners_dark_green"
        android:fontFamily="@font/ellina"
        android:padding="10dp"
        android:text="Adddd \n ddd"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ingredientsNonEditName"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="80dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/ellina"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Adddd"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ingredientsNonEditAmount"
        app:layout_constraintEnd_toStartOf="@+id/ingredientsNonEditAmount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ingredientsNonEditAmount" />


</androidx.constraintlayout.widget.ConstraintLayout>