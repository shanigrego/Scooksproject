<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:nestedScrollingEnabled="true">

        <LinearLayout
            android:id="@+id/singleRecipeLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_back"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"/>


            <EditText
                android:id="@+id/recipeNameET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="שם המתכון"
                android:inputType="textPersonName"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/recipeNameError"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headersLinearLayout"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:divider="@drawable/tall_divider"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:showDividers="middle">


                            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/levelEV"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                                android:background="@drawable/circle"
                    android:layout_weight="1"
                    android:hint="רמת קושי"
                    android:onClick="showPopupMenu"/>

<!--                    <TextView-->
<!--                    android:id="@+id/levelEV"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_weight="1"-->
<!--                        android:background="@drawable/circle"-->
<!--                    android:onClick="showPopupMenu"/>-->

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/preperationTimeET"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:hint="זמן הכנה" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/makingTimeET"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:hint="זמן עבודה" />
            </LinearLayout>

            <TextView
                android:id="@+id/otherErrors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/headerIngredients"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_gravity="end"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/ellina"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/addIngredients"
                android:textColor="@color/black"
                android:textSize="22sp" />

<!--            <com.google.android.material.button.MaterialButton-->
<!--                android:id="@+id/addIngredientsBtn"-->
<!--                android:layout_width="200dp"-->
<!--                android:layout_height="60dp"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:backgroundTint="#F9A9FF"-->
<!--                android:fontFamily="@font/ellina"-->
<!--                app:cornerRadius="30dp"-->
<!--                android:gravity="center|center_horizontal"-->
<!--                android:text="@string/addIngredients"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="20sp" />-->


            <ListView
                android:id="@+id/ingredientsListView"
                android:layout_width="match_parent"
                android:layout_height="69dp" />


            <TextView
                android:id="@+id/addSingleIngredientBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_text_view"
                android:backgroundTint="#FF91E0"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/add"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                />

            <TextView
                android:id="@+id/recipeDetailsSteps"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/ellina"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/addRecipeInstructions"
                android:textColor="@color/black"
                android:textSize="22sp" />

<!--            <com.google.android.material.button.MaterialButton-->
<!--                android:id="@+id/addWorkingProccessBtn"-->
<!--                android:layout_width="200dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center"-->
<!--                app:cornerRadius="30dp"-->
<!--                android:fontFamily="@font/ellina"-->
<!--                android:backgroundTint="#F9A9FF"-->
<!--                android:gravity="center|center_horizontal"-->
<!--                android:text="@string/addInstructions"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="20sp"-->
<!--                android:textStyle="bold" />-->

            <ListView
                android:id="@+id/recipeStepsListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/addStep"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/rounded_text_view"
                android:backgroundTint="#69FFAD"
                android:gravity="center"
                android:text="+"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/submitRecipeBtn"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                app:cornerRadius="30dp"
                android:fontFamily="@font/ellina"
                android:backgroundTint="#AFFFA9"
                android:gravity="center|center_horizontal"
                android:text="@string/finish"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>