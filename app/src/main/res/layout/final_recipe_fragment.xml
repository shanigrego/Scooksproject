<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:id="@+id/finalRecipeHeader"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="המתכון הסופי!"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"/>


        <LinearLayout
            android:id="@+id/finalHeadersLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/finalRecipeHeader"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="50dp"
                android:gravity="center"
                android:hint="רמת קושי"
                android:onClick="showPopupMenu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="50dp"
                android:gravity="center"
                android:hint="זמן הכנה" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="50dp"
                android:gravity="center"
                android:hint="זמן עבודה" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/finLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/finalHeadersLinearLayout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/finalLevelTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="50dp"
                android:gravity="center"
                android:hint="רמת קושי"
                android:onClick="showPopupMenu" />

            <TextView
                android:id="@+id/finalPreperationTimeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="50dp"
                android:gravity="center"
                android:hint="זמן הכנה" />

            <TextView
                android:id="@+id/finalMakingTimeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="50dp"
                android:gravity="center"
                android:hint="זמן עבודה" />
        </LinearLayout>

        <ListView
            android:id="@+id/finalRecipeInstructionsList"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/finLinearLayout"
            android:divider="@android:color/transparent"
            android:dividerHeight="10.0sp"/>

    </RelativeLayout>
