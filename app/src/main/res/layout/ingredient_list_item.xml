<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp">

    <ImageView
        android:id="@+id/removeIngredient"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/delete"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/nameIngredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textAlignment="textEnd"
        android:layout_toLeftOf="@+id/amountIngredient"
        android:text="סוכר"
        android:textSize="20dp"
        android:layout_marginRight="15dp"/>

    <Button
        android:id="@+id/amountIngredient"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/numberPickerIngredient"
        android:backgroundTint="@color/pink"
        android:text="יח' מידה"
        android:textColor="@color/black"
        android:onClick="showPopupMenu"
        android:textSize="12dp"/>

    <NumberPicker
        android:id="@+id/numberPickerIngredient"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="3dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/pink"/>
</RelativeLayout>