<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/recipesBtn"
        android:layout_width="173dp"
        android:layout_height="80dp"
        android:text="Recipes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addRecipePlusIV" />

    <Button
        android:id="@+id/myRecipesBtn"
        android:layout_width="168dp"
        android:layout_height="74dp"
        android:text="My Recipes"
        app:layout_constraintBaseline_toBaselineOf="@+id/recipesBtn"
        app:layout_constraintEnd_toStartOf="@+id/addRecipePlusIV"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/addRecipePlusIV"
        android:layout_width="121dp"
        android:layout_height="82dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/recipeBookScrollView"
        android:layout_width="401dp"
        android:layout_height="553dp"
        app:layout_constraintBottom_toTopOf="@+id/addRecipePlusIV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fillViewport="true"/>
</androidx.constraintlayout.widget.ConstraintLayout>